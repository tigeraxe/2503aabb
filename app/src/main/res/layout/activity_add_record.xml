<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecordActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <RelativeLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_one"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_two"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_three"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="4"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_four"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_five"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_six"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="7"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_seven"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="8"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_eight"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="9"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_nine"/>

                </TableRow>
                <TableRow android:layout_weight="1">

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_zero"/>

                    <Button
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="."
                        android:background="@android:color/white"
                        android:id="@+id/keyboard_dot"/>

                </TableRow>

            </TableLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="0.75"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/keyboard_type"
                    android:text="支出"
                    android:textSize="18dp"
                    android:stateListAnimator="@null"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"/>
                <ImageButton
                    android:id="@+id/keyboard_backspace"
                    android:src="@drawable/baseline_backspace_24"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/keyboard_done"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:src="@drawable/baseline_done_24" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_layout"
        android:background="#ffffff"
        android:layout_above="@id/linearLayout"
        android:layout_below="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center"
            android:text="0.00"
            android:textColor="#128A3A"
            android:textSize="60dp" />

        <LinearLayout
            android:id="@+id/layout_class"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/layout_click"
            android:clickable="true"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:src="@drawable/class_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="分类"
                android:textColor="#626262"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_class"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="Book"
                android:background="@drawable/bg_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_account"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/layout_click"
            android:clickable="true"
            android:padding="10dp"
            android:layout_weight="0.12"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:src="@drawable/account_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="账户"
                android:textColor="#626262"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_account"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="默认账户"
                android:background="@drawable/bg_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:id="@+id/layout_time"
            android:clickable="true"
            android:padding="10dp"
            android:background="@drawable/layout_click"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:src="@drawable/time_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="时间"
                android:textColor="#626262"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_time"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="Book"
                android:background="@drawable/bg_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:id="@+id/layout_member"
            android:background="@drawable/layout_click"
            android:clickable="true"
            android:padding="10dp"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:src="@drawable/member_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="成员"
                android:textColor="#626262"
                android:gravity="center"
                android:textSize="16dp"/>
            <TextView
                android:gravity="center_vertical"
                android:id="@+id/tv_member"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textStyle="normal"
                android:text="无成员"
                android:background="@drawable/bg_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_toolbar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/add_layout"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="记账"
                android:textSize="20dp"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

</RelativeLayout>